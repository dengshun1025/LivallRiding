<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/light_gray"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/llp_qq_btn"
            android:layout_marginLeft="@dimen/message_menu_left"
            android:layout_width="@dimen/message_menu_width"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_add_friend"
            android:text="@string/menu_add_friend"
            android:layout_marginLeft="@dimen/message_menu_left"
            android:layout_marginRight="@dimen/message_menu_left"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/llp_sina_btn"
            android:layout_marginLeft="@dimen/message_menu_left"
            android:layout_width="@dimen/message_menu_width"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Txt_create_group"
            android:text="@string/menu_create_group"
            android:layout_marginLeft="@dimen/message_menu_left"
            android:layout_marginRight="@dimen/message_menu_left"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
