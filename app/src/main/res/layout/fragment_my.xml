<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backGround"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragment.MyFragment">

    <FrameLayout
        android:background="@mipmap/background_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_setting"
            android:src="@mipmap/lmp_home_set_img"
            android:layout_gravity="end|top"
            android:layout_marginTop="@dimen/btn_exit_height"
            android:layout_marginRight="@dimen/btn_exit_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_my_login"
            android:text="@string/btn_my_login"
            android:textSize="@dimen/btn_my_login_size"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:background="@color/my_login_bg"
            android:layout_width="@dimen/btn_my_login_width"
            android:layout_height="@dimen/btn_my_login_height"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/my_fragment_ll1"
        android:orientation="horizontal"
        android:background="@color/light_gray"
        android:layout_marginTop="@dimen/my_fragment_ll1_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_ride_record"
            android:text="@string/txt_ride_record"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_ride_record"
            android:layout_marginLeft="@dimen/img_pwd_left"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/my_fragment_ride_record_img"
            android:src="@mipmap/my_fragment_ride_record_img"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/img_pwd_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/img_user_height"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/lmp_home_time_img"
                android:src="@mipmap/lmp_home_time_img"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_my_time"
                android:text="0"
                android:textSize="@dimen/txt_my_time"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/lmp_home_time_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/txt_time_record"
                android:layout_below="@id/txt_my_time"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:src="@mipmap/lmp_home_v_two_splite_img"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_marginTop="@dimen/img_user_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/lmp_home_mile_img"
                android:src="@mipmap/lmp_home_mile_img"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_my_mile"
                android:text="0"
                android:textSize="@dimen/txt_my_time"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/lmp_home_mile_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/txt_my_mile"
                android:layout_below="@id/txt_my_mile"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:src="@mipmap/lmp_home_v_two_splite_img"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/img_user_height"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/lmp_home_frequency_img"
                android:src="@mipmap/lmp_home_frequency_img"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_my_frequency"
                android:text="0"
                android:textSize="@dimen/txt_my_time"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/lmp_home_frequency_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/txt_my_frequency"
                android:layout_below="@id/txt_my_frequency"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

